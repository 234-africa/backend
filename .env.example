# Database
DATABASE=mongodb://localhost:27017/your-database-name

# Frontend URL
FRONTEND_URL=http://localhost:8080

# Email Configuration
GOOGLE_APP_EMAIL=your-email@example.com
GOOGLE_APP_PW=your-email-password

# Payment Gateways

# Paystack (for NGN, GHS currencies)
PAYSTACK_SECRET_KEY=sk_test_your_paystack_secret_key

# Stripe (for USD, GBP, EUR currencies)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Fincra (for KES, UGX, ZMW, ZAR and other African currencies)
FINCRA_SECRET_KEY=sk_test_your_fincra_secret_key
FINCRA_PUBLIC_KEY=pk_test_your_fincra_public_key
FINCRA_WEBHOOK_SECRET=your_fincra_webhook_secret

# Environment
NODE_ENV=development
PORT=5000
